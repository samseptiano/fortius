<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:id="@+id/cl_date"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date_number"
        style="@style/tvStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorGreyDarker"
        android:textSize="@dimen/_60sdp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date_day"
        style="@style/tvStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Mon"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/tv_date_number"
        app:layout_constraintTop_toTopOf="@id/tv_date_number"
        android:textColor="@color/colorGreyDarker"
        android:textSize="@dimen/_25sdp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_month_year"
        style="@style/tvStyleBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Sep 2023"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@id/tv_date_number"
        app:layout_constraintTop_toBottomOf="@id/tv_date_day"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_number"
        android:textColor="@color/colorGreyDark"
        android:textSize="@dimen/_22sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>